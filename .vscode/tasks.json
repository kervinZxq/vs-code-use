        },
        {
            "label": "build",
            "type": "process",
            "command": "sh",
            "args": [
                "${workspaceFolder}/build.sh"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/gcc"
        },
        {
            "label": "run",
